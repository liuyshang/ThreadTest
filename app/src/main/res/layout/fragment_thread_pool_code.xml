<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="15sp"/>

            <Button
                android:id="@+id/bt_newCachedThreadPool"
                style="@style/Button"
                android:layout_marginTop="20dp"
                android:text="NEWCACHETHREADPOOL" />

            <Button
                android:id="@+id/bt_newFixedThreadPool"
                style="@style/Button"
                android:text="NEWFIXEDTHREADPOOL" />

            <Button
                android:id="@+id/bt_newScheduledThreadPool"
                style="@style/Button"
                android:text="NEWSCHEDULEDTHREADPOOL" />

            <Button
                android:id="@+id/bt_newSingleThreadExecutor"
                style="@style/Button"
                android:text="NEWSINGLETHREADEXECUTOR" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>